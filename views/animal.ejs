</head>
<body>
<% include ./public/header.ejs %>
<section id="page">
    <section id="info">
        <ul id="information">
            <li>Name: <%= name %></li>
            <li>Species: <%= breed %></li>
            <li>Location: <%= town %></li>
        </ul>
    </section>
    <section id=images>
        <div id="canvasDiv"></div>
        <img id="picture" hidden src="<%= picture %>">
        <canvas height=100% width=100% id="canvas"></canvas>
    </section>
    <section id=comments>
        <h1>Comments</h1>
        <ul id="commentList"></ul>
        <div class="alert alert-danger" id="commentsList" role="alert"></div>
    </section>
    <section id=form>
        <!--<form onSubmit="return addComment()">
            <label for="comment-box"><h3>Enter Comments:</h3></label>
            <input type="text" id="new-comment">
            <input type="submit" value="Comment">
        </form>-->
        <form id="commontForm" onSubmit="onSubmitComments('/comment')" method="POST">
            <label for="comment-box"><h3>Enter Comments:</h3></label>
            <input type="text" id="new-comment" name="comment">
            <input type="submit" value="Comment">
        </form>

    </section>
</section>
</body>
<script>
    window.onload = function () {
        var canvas = document.getElementById("canvas");
        var ctx = canvas.getContext("2d");
        var img = document.getElementById("picture");
        ctx.drawImage(img, 10, 10, 100, 100);
    };
</script>
